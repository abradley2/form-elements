.elm-switch-container
    display inline-block
    .elm-switch__label
        color label-color
        font-size 12px
    .elm-switch__label--toggled
        color primary-color

    .elm-switch
        display inline-block
        width 80px
        height 40px
        cursor pointer
        border solid 1px label-color
        border-color label-color
        border-radius 3px
        margin 1px
        position relative
        transition .25s
        background-color light-shade
        &.elm-switch--selected
            border-color light-shade
            background-color primary-color
        .elm-switch__switch-indicator
            display flex
            background-color white
            transition .25s
            color label-color
            text-align center
            position absolute
            top -2px
            left -2px
            height 44px
            width 44px
            line-height 12px
            box-sizing border-box
            border solid 3px label-color
            border-radius 3px
        .elm-switch__switch-indicator--toggled
            left 38px
            color primary-color
            border solid 3px secondary-color
